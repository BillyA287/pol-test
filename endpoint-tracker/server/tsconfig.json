{
  "compilerOptions": {
    "types": ["node"],
    "module": "CommonJS",
    "target": "ES2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "../dist",           
    "rootDir": "..",               
    "baseUrl": ".."
  },
  "include": [
    "../server/**/*.ts",          
    "../shared-types/**/*.ts"     
  ],
  "exclude": [
    "node_modules",
    "../dist"
  ]
}
